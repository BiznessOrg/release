# Contributor:
# Maintainer:
pkgname=tablet-daemon
pkgver=0.0.6
pkgrel=0
pkgdesc="tablet daemon"
url="localhost"
arch="all"
license="ALL_RIGHTS_RESERVED(peasent)"
depends=""
makedepends="go"
checkdepends=""
# install="$pkgname.pre-install $pkgname.post-install"
source="
	tablet-daemon.initd
	tablet-daemon.confd
	"
builddir="$srcdir/"
options="!check"

build() {
	ln -s $HOME/bizness-daemon/ "$srcdir/$pkgname-$pkgver"
	cd "$srcdir/$pkgname-$pkgver"
	go build .
}

package() {
	install -m755 -D "$srcdir"/$pkgname.initd \
		"$pkgdir"/etc/init.d/$pkgname
	install -m644 -D "$srcdir"/$pkgname.confd \
		"$pkgdir"/etc/conf.d/$pkgname
	
	install -m755 -D "$srcdir/$pkgname-$pkgver/bizness-daemon" "$pkgdir/usr/bin/tablet-daemon"
}

sha512sums="
